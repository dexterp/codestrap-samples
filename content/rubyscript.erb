#!/usr/bin/env ruby
# vim: ft=ruby ts=2 sw=2 expandtab
#
# date: <%= datetime.strftime('%c') %>

require 'optparse'

options = {}
OptionParser.new do |opts|
  opts.banner = 'Usage <%= project.name %> [options]'

  opts.on('-?', '--help', 'Print Help and exit') do
    puts opts
    exit 0
  end

  opts.on('-v', '--verbose', 'Run verbosely') do |verbose|
    options[:verbose] = verbose
  end

end.parse!
